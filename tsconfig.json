{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "CommonJS",
    "target": "es5",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["ESNext"],
    "outDir": "./dist",
    "paths": {
      "@src/*": ["src/*"],
      "@root": ["*"]
    },
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "./dist"]
}
